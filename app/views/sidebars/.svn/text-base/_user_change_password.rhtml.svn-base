<div id="password-block" class="block highlighted">
  <h3>Change your password?</h3>
  <div class="content">
    <%= @change_password_message || "" %>
    <%= form_tag(:controller => 'users', :action => 'change_password', :user_id => @user) %>
      <p class="field"><label for="password">Old password:</label>
      <%= password_field_tag 'old_password' %></p>
    
      <p class="field"><label for="password_confirmation">New password:</label>
      <%= password_field_tag 'new_password' %></p>
      
      <%= submit_tag 'Change Password' %>
    <%= end_form_tag %>
  </div>
</div>