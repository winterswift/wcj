<a name="comment-form"></a>
<div id="block-comment-form" class="block">
  <% if logged_in? %>
    <%= render :partial => 'comments/new' %>
  <% else %>
    <div class="content">
      Only members can comment on journal entries.
      <%= link_to 'Login', login_url %> or <%= link_to 'sign up', signup_url %> to post a comment.
    </div>
  <% end %>
</div>