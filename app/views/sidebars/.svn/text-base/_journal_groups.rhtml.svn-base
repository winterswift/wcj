<% unless @groups.blank? %>
<div id="block-groups" class="block">
  <h3>Belongs to...</h3>
  <div class="content">
    <p>This journal is in the following groups:</p>
    <ul>
      <% @groups.each do |group| %>
      <li><%= link_to group.title, :controller => 'groups', :action => 'show', :id => group %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>